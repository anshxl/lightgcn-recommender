#!/bin/bash --login
#SBATCH --job-name=rec-train
#SBATCH --ntasks=4
#SBATCH --gpus=v100:1
#SBATCH --mem=10Gb
#SBATCH --time=05:00:00
#SBATCH --output=logs/train-%j.out
#SBATCH --error=logs/train-%j.err

# Load modules
module purge
module load Miniforge3
module load CUDA/12.4.0

# Activate env
conda activate rec-sys

python -m src.train